{
    "name": "@serial/serial",
    "version": "0.1.0",
    "license": "./LICENSE",
    "exports": "./src/index.ts",
    "tasks": {
        "index": "deno run --check --unstable -A ./src/index.ts",
        "test": {
            "command": "deno run -A ./test/index.ts"
        }
    },
    "exclude": [
        "**/*.test.ts"
    ],
    "test": {
        "include": [
            "**/*.test.ts"
        ]
    },
    "lint": {
        "rules": {
            "tags": [
                "recommended"
            ],
            "include": [
                "verbatim-module-syntax"
            ]
        }
    }
}
